<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="icon" href="images/favicon.ico" />
    <title>Organic Food</title>

    <link
      rel="stylesheet"
      href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
      integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://unpkg.com/swiper/swiper-bundle.min.css"
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link rel="stylesheet" href="css/home.css" />
  </head>

  <body>
    <% include /src/include/header.ejs %>
    <main id="of-page-index">
      <section class="home-banner">
        <div class="background-banner">
          <div class="bannerimg">
            <div class="banner-content">
              <h4 class="text-primary text-uppercase">ORGANIC FOOD</h4>
              <h2 class="display-4 banner-title">
                Looking for <br />the fresh Organic Food
              </h2>
              <button class="btnshop text-uppercase">SHOP NOW</button>
            </div>
          </div>
        </div>
      </section>

      <section class="serviceinfo">
        <div class="container">
          <div class="row">
            <div class="col-md-3">
              <div class="service1">
                <i class="far fa-shipping-fast"></i>
              </div>
              <h4>Free Shipping</h4>
              <h5>Free shipping for all US order</h5>
            </div>

            <div class="col-md-3">
              <div class="service2">
                <i class="fal fa-user-headset"></i>
              </div>
              <h4>Support 24/7</h4>
              <h5>We support 24h a day</h5>
            </div>

            <div class="col-md-3">
              <div class="service3">
                <i class="far fa-money-bill-alt"></i>
              </div>
              <h4>100% Money Back</h4>
              <h5>You have 30 days to return</h5>
            </div>

            <div class="col-md-3">
              <div class="service4">
                <i class="fal fa-badge-check"></i>
              </div>
              <h4>Payment Secure</h4>
              <h5>We ensure secure payment</h5>
            </div>
          </div>
        </div>
      </section>

      <section class="food-cat">
        <div class="background-cat">
          <div class="container">
            <div class="headtitle">
              <h2 class="display-6 cat-text">Top Categories</h2>
            </div>
            <div class="food-info">
              <div class="col-sm-12 col-md-2">
                <div class="food-cat1"></div>
                <h4>Fruits</h4>
              </div>
              <div class="col-sm-12 col-md-2">
                <div class="food-cat2"></div>
                <h4>Vegetables</h4>
              </div>
              <div class="col-sm-12 col-md-2">
                <div class="food-cat3"></div>
                <h4>Drinks</h4>
              </div>
              <div class="col-sm-12 col-md-2">
                <div class="food-cat4"></div>
                <h4>Eggs</h4>
              </div>
              <div class="col-sm-12 col-md-2">
                <div class="food-cat5"></div>
                <h4>Cake</h4>
              </div>
              <div class="col-sm-12 col-md-2">
                <div class="food-cat6"></div>
                <h4>Meats</h4>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section class="offer-product">
        <div class="container">
            <div class="product-box">
                    <div class="row">
                    <div class="col-md-4">
                      <div class="prodleft-box">
                        <div class="prodimage"></div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="prodinfo">
                        <h3>Organic Tomato</h3>
                        <div class="price">
                          <span class="text-primary">$25.00</span>
                          <span class="strike">$25.00</span>
                        </div>
                        <div class="prod-stat">
                          <div class="prod-text">
                            <span>Available: 237</span>
                            <span style="float: right">Already Sold: 23</span>
                          </div>
                          <div class="progress">
                            <div
                              class="progress-bar text-primary"
                              role="progressbar"
                              style="width: 25%"
                              aria-valuenow="25"
                              aria-valuemin="0"
                              aria-valuemax="100"
                            ></div>
                          </div>
                        </div>
                        <div class="time-box">
                          <div class="box-text">20 DAYS</div>
                          <div class="box-text">22 HR</div>
                          <div class="box-text">10 MIN</div>
                          <div class="box-text">56 SEC</div>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-2">
                      <div class="prodright-box">
                        <div class="prodright-img"></div>
                        <div class="prod-bottom">
                          <div class="bottom-img"></div>
                        </div>
                      </div>
                    </div>
                 </div>
            </div>
        </div>
      </section>

    </main>

    <% include /src/include/footer.ejs %>
    <script src="js/home.js"></script>
  </body>
</html>
